{%
  set classes = [
    'layout',
    'layout-childreset',
    'layout--twocol',
    'layout-dt',
    'row',
  ]
%}
<div{{ attributes.addClass(classes) }}>
    <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first', 'col') }}>
        {% if content %}
            {{ content.first }}   
        {% endif %}
    </div>
    <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second', 'col') }}>
        {% if content %}
            {{ content.second }}   
        {% endif %}     
    </div>
</div>
